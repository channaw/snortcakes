                    $.each(data, function (i, data) {
                        var div_data = "<option value=" + data.frostingId + ">" + data.frostingName + "</option>";
                        $(div_data).appendTo('#frostings_select');
                    });
                }
        });

        $.ajax({
                type: "GET",
                url: "http://fdcapi.azurewebsites.net/api/toppings",
                dataType: "json",
                success: function (data) {

                    $.each(data, function (i, data) {
                        var div_data = "<option value=" + data.toppingId + ">" + data.toppingName + "</option>";
                        $(div_data).appendTo('#toppings_select');
                    });
                }
            });
    });

</script>

