@page
@model OrderModel
@{
    ViewData["Title"] = "Order";
}

<script type="text/javascript">
    $(document).ready(function () {
        
            $.ajax({
                type: "GET",
                url: "http://fdcapi.azurewebsites.net/api/flavors/",
                dataType: "json",
                success: function (data) {

                    $.each(data, function (i, data) {
                        var div_data = "<option value=" + data.flavorId + ">" + data.flavorName + "</option>";
                        $(div_data).appendTo('#flavor_select');
                    });
                }
            });


        $.ajax({
                type: "GET",
                url: "http://fdcapi.azurewebsites.net/api/flavors/",
                dataType: "json",
                success: function (data) {

                    $.each(data, function (i, data) {
                        var div_data = "<option value=" + data.flavorId + ">" + data.flavorName + "</option>";
                        $(div_data).appendTo('#flavor_select2');
                    });
                }
        });

        $.ajax({
                type: "GET",
                url: "http://fdcapi.azurewebsites.net/api/frostings/",
                dataType: "json",
